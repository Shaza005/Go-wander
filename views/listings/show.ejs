<% layout("/layouts/boilerplate") %>

    <div class="row">
    <div class="col-8 offset-2 mt-3">

    <div class="card col-8 offset-2 listing-card" >
    <h3> <i><%=listing.title%></i></h3>
    <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing-image" >
    <div class="card-body">
    <p class="card-text">
       <br>
        <%=listing.description%><br>
        &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
        <%=listing.location%><br>
        <%=listing.country%>
        </p>
    </div>
    
        <div class="row mt-2">
        <div class="col-3">
        <form method="GET" action="/listings/<%=listing._id%>/edit">
            <button class="btn btn-dark edit-btn">Edit </button>
        </form>
        </div>
        <div class="col">
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark delete-btn">Delete</button>
        </form>  
        </div>
        </div>

        <hr>
            
            <h3>Leave a review</h3>
            <form  method="POST" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
                <h5>Elleni Parker</h5>
                <label for="rating" class="form-label">Rating</label>
                <input name="review[rating]" type="range" min="0" max="5" step="1" class="form-range"  >
               
                
                <label for="comment" class="form-label" >comment</label>
                <textarea rows="5"  name="review[comment]" id="comment" class="form-control" required></textarea>
                <div class="invalid-feedback">please add a review</div>
                <br>
                <button class="btn btn-dark">Submit Review</button>
            </form> 
           
            <hr>
            <div class="row mt-2">
                <h4>All Reviews</h4>
            <%for(let review of listing.reviews){%>
            <div class="card col-5 ms-2 mb-2 " style="width:15.5rem;">
            <div class="card-body">
            <div class="card-title">joe kayn</div>
            <div class="card-text"><%=review.comment%></div>
            <div class="card-text"><%=review.rating%>Stars</div>
            <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                <button class="btn btn-sm btn-dark mb-2">Delete</button> 
            </form>
            </div>
            </div>
            
            <%}%>
        </div>
    
    </div>
    </div>
    </div>
  

